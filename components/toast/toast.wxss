/* components/toast.wxss */
.toast {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgb(102, 102, 102, .5);
}
.toastContent {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.toast .container {
  width: 600rpx;
  height: 400rpx;
  background-color: #484848;
  opacity: 1;
  position: relative;
  font-size: 32rpx;
  color: #FF9900;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 4rpx;
}
.container .title {
  position: absolute;
  top: 0rpx;
  font-size: 48rpx;
  margin: 10rpx auto;
  text-align: center;
}
.container .desc {
  width: 100%;
  color: white;
  word-wrap: break-word;
  text-align: center;
}
.closeIconBox {
  height: 50rpx;
  width: 50rpx;
  background-color: #484848;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.closeIcon {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;
}