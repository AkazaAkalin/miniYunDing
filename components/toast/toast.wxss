/* components/toast.wxss */
.toast {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #666666;
  opacity: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.toast .container {
  width: 480rpx;
  height: 300rpx;
  background-color: black;
  position: relative;
  font-size: 32rpx;
  color: yellow;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .title {
  font-size: 48rpx;
  margin: 10rpx auto;
}
